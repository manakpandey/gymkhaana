<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/bootstrap-4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/admin.style.css">
  <title>GYM Khaana</title>
</head>

<body>
  <nav class="sidebar p-4">
    <div class="h2 m-2">GYM Khaana</div>
    <div class="d-flex flex-column" style="height: 100%;">
      <ul class="nav nav-pills nav-fill flex-column">
        <li class="nav-item">
          <a class="nav-link active" href="/admin/">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/menu">Menu</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/orders">Order History</a>
        </li>
      </ul>
      <button type="button" class="btn btn-outline-success" data-toggle="modal" 
      data-target=".bd-example-modal-lg">Validate Token</button>
  
    </div>
  </nav>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="validateModal" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="validateModal">Token Validation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="tokenSearch" style="display: block;">
          <form class="form-inline">
            <label class="sr-only" for="inlineFormInputName2">Token Number</label>
            <input type="number" class="form-control mb-2 mr-sm-2" style="width: 40%;" id="inlineFormInputTokenNumber" placeholder="Token Number" required>
          
            <label class="sr-only" for="inlineFormInputGroupUsername2">Phone Number</label>
            <div class="input-group mb-2 mr-sm-2">
              <div class="input-group-prepend">
                <div class="input-group-text">+91</div>
              </div>
              <input type="tel" pattern="[1-9][0-9]{9}" class="form-control" style="width: 60%;" id="inlineFormInputGroupPhoneNumber" placeholder="Phone Number" required>
            </div>
            <button type="submit" class="btn btn-primary mb-2 ml-4" style="width:20%" onclick="validateToken()">Search</button>
          </form>
        </div>
        <div id="tokenSearchResult" style="display: none;">
          <div class="d-flex justify-content-center">
            <strong>Collect Cash from custName </strong>
          </div>
          <div class="d-flex justify-content-center">
            <h4>&#8377 300</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="content">
    <div class="navbar navbar-dark bg-dark">
      <div class="navbar-brand">Active Orders</div>
    </div>
    <div class="p-4">
      <% for( let i = 0; i < orders.length; i++ ) { %>
      <div style="width: 50%;float: left">
        <div class="card m-2 p-1" id="orderCard">
          <div class="card-body">
            <div class="d-flex flex-column">
              <div class="d-flex justify-content-between mb-2">
                <div class="d-flex align-items-end flex-column bd-highlight " style="height: 50px;">
                  <div class=" bd-highlight">Token no.</div>
                  <div class="p-2 bd-highlight">
                    <h2>999</h2>
                  </div>
                </div>
                <div class="d-flex align-items-end flex-column bd-highlight mb-3" style="height: 50px;">
                  <div class="p-2 bd-highlight">Customer name : <strong><%=orders[i].custName%></strong></div>
                  <div class="p-2 bd-highlight">Customer number :<strong><%=orders[i].custNumber%></strong>
                  </div>
                </div>
              </div>
              <div class="container">
                <div class="row mt-3">
                  <div class="col text-left">
                    <strong>Item</strong>
                  </div>
                  <div class="col text-center">
                    <strong>Qty</strong>
                  </div>
                </div>
                <% for( let j = 0; j < orders[i].items.itemId.length; j++ ) { %>
                <div class="row">
                  <div class="col">
                    <h6><%=orders[i].items.itemId[j]%></h6>
                  </div>
                  <div class="col text-center">
                    <h6><%=orders[i].items.quantity[j]%></h6>
                  </div>
                </div>
                <% } %>

              </div>
              <div class="d-flex justify-content-between">
                <button class="btn btn-primary mt-3" id="delivered" onclick="hide('orderCard')">Delivered</button>
                <h6 class="mt-3"><strong>Total : &#8377 <%=orders[i].amt%></strong></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <script src="/jquery/jquery-3.2.1.slim.min.js"></script>
  <script src="/js/popper-1.12.9.min.js"></script>
  <script src="/bootstrap-4.4.1/js/bootstrap.min.js"></script>
  <script>
    function validateToken(){
      document.getElementById('tokenSearch').style.display="none";
      document.getElementById('tokenSearchResult').style.display="block";
    }
  </script>
</body>

</html>