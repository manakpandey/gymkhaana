<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/bootstrap-4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/jquery/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/css/admin.style.css">
    <title>GYM Khaana</title>
</head>

<body>
    <nav class="sidebar p-4">
        <div class="h2 m-2">GYM Khaana</div>
        <ul class="nav nav-pills nav-fill flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link" href="/admin/">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/menu">Menu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/admin/orders">Order History</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/incompleteOrders">Incomplete Orders</a>
            </li>
        </ul>
    </nav>
    <div class="content">
        <div class="navbar navbar-dark bg-dark">
            <div class="navbar-brand">Order History</div>
        </div>
          <div class="p-4">
          <table class="table table-striped p-3 display" id="myTable">
            <thead>
              <tr>
                <th scope="col">Token Number</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Bill Amount</th>
              </tr>
            </thead>
            <tbody>
              <% for( let i = 0; i < orders.length; i++ ) { %>
              <tr>
                <th>1000</th>
                <td><%=orders[i].custName%></td>
                <td><%=orders[i].custNumber%></td>
                <td>&#8377 <%=orders[i].amt%></td>
                <td><button class="btn btn-outline-success" data-toggle="modal" data-target="#confirmModal">View</button></td>
      
                <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="confirmModalLabel">Confirm Order</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <div class="card p-1" id="orderCard">
                          <div class="card-body">
                            <div class="d-flex flex-column">
                              <div class="d-flex justify-content-between mb-4">
                                <div class="d-flex align-items-end flex-column bd-highlight " style="height: 50px;">
                                  <div class=" bd-highlight">Token no.</div>
                                  <div class="p-2 bd-highlight">
                                    <h3>1000</h3>
                                  </div>
                                </div>
                                <div class="d-flex align-items-start flex-column bd-highlight mb-4" style="height: 50px;">
                                  <div class="p-2 bd-highlight">Customer name : <strong><%=orders[i].custName%></strong></div>
                                  <div class="p-2 bd-highlight">Customer number :<strong><%=orders[i].custNumber%></strong>
                                  </div>
                                </div>
                              </div>
                              <div class="container">
                                <div class="row mt-3">
                                  <div class="col text-left">
                                    <strong>Item</strong>
                                  </div>
                                  <div class="col text-center">
                                    <strong>Qty</strong>
                                  </div>
                                </div>
                                
                                <% for( let j = 0; j < orders[i].items.itemId.length; j++ ) { %>
                                  <div class="row">
                                    <div class="col">
                                      <h6><%=orders[i].items.itemId[j]%></h6>
                                    </div>
                                    <div class="col text-center">
                                      <h6><%=orders[i].items.quantity[j]%></h6>
                                    </div>
                                  </div>
                                  <% } %>
                  
                           
                
                              </div>
                              <div class="d-flex justify-content-end">
                                <h6 class="mt-3"><strong>Total : &#8377 <%=orders[i].amt%></strong></h6>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </tr>
             <% } %>
            </tbody>
          </table>
          </div>
    </div>

    <script src="/jquery/jquery-3.2.1.slim.min.js"></script>
    <script src="/js/popper-1.12.9.min.js"></script>
    <script src="/bootstrap-4.4.1/js/bootstrap.min.js"></script>
    <script src="/jquery/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
          $('#myTable').DataTable();
        });
    </script>
</body>

</html>